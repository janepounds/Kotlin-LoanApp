<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExpandableLayoutTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/darkBlue_1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ProgressCircleTextView">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/circle_shape</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="ProgressTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="PowerSpinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/slider_bg_with_stroke</item>
        <item name="android:hint">@string/select</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/darkBlue_1</item>
        <item name="spinner_arrow_show">true</item>
        <item name="spinner_arrow_gravity">end</item>
        <item name="spinner_arrow_padding">0dp</item>
        <item name="spinner_arrow_tint">@color/darkBlue_1</item>
        <item name="spinner_divider_color">@color/darkBlue_1</item>
        <item name="spinner_divider_show">true</item>
        <item name="spinner_divider_size">0.4dp</item>
        <item name="spinner_popup_animation">dropdown</item>
        <item name="spinner_popup_background">@color/white</item>
        <item name="spinner_popup_elevation">14dp</item>
    </style>

    <style name="QuickActionTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="ConfirmationDialogTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>